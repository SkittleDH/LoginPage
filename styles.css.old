/* General Body Styling */
body {
    background-color: #00a2e8;
    font-family: 'Comic Sans MS', cursive, sans-serif;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

/* Login Container Styling */
.login-container {
    background-color: #b3d9ff;
    padding: 20px;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    width: 350px;
    text-align: center;
    animation: fadeIn 1.5s ease-in-out;
}

h1 {
    font-size: 2.5em;
    color: black;
    margin-bottom: 20px;
    animation: bounceIn 1s ease;
}

/* Input Styling */
input {
    font-size: 1.5em;
    padding: 10px;
    margin: 20px 0;
    border-radius: 15px;
    border: none;
    outline: none;
    background-color: #ffffff;
    width: 300px;
    text-align: center;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
    font-family: 'Comic Sans MS', cursive, sans-serif;
    letter-spacing: 0.05em;
    animation: typingFade 0.1s ease-in-out forwards;
}

/* Smooth pop-out animation for each typed letter */
input:focus::placeholder {
    color: #e0e0e0;
}

input:focus {
    animation: letterPop 0.3s forwards;
}

@keyframes letterPop {
    0% {
        letter-spacing: 0.05em;
        transform: scale(1);
    }
    100% {
        letter-spacing: 0.2em;
        transform: scale(1.05);
    }
}

/* Button Styling */
button {
    font-size: 1.5em;
    padding: 10px 20px;
    border-radius: 15px;
    border: none;
    outline: none;
    background-color: #bfe554;
    color: black;
    cursor: pointer;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, background-color 0.3s ease, box-shadow 0.3s ease;
}

button:hover {
    transform: scale(1.1);
    background-color: #a3c442;
    box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
}

/* Error Popup Styling */
.error-container {
    display: none;
    background-color: #ffcccc;
    border: 2px solid red;
    border-radius: 15px;
    padding: 20px;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    opacity: 0;
    transition: opacity 0.5s ease, transform 0.5s ease;
}

.error-container.visible {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
}

.error-container h2 {
    margin: 0;
    font-size: 2em;
    color: red;
}

.error-container p {
    font-size: 1.2em;
}

.error-container button {
    font-size: 1.2em;
    padding: 10px 15px;
    background-color: #bfe554;
    border-radius: 10px;
    cursor: pointer;
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes bounceIn {
    0% {
        transform: scale(0.5);
    }
    100% {
        transform: scale(1);
    }
}

@keyframes typingFade {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}
